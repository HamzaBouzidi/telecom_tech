<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".activity_new_essai"
    android:background="@drawable/sign_in_background">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:overScrollMode="always"
    android:padding="24dp"
    android:scrollbars="none"
    tools:context=".activity_new_essai"
    android:background="@drawable/sign_in_background">

    <ImageView
        android:id="@+id/telecom_img"
        android:layout_width="133dp"
        android:layout_height="73dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/telecomlogo"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/avancement_taches_img"
        android:layout_width="284dp"
        android:layout_height="93dp"
        android:layout_marginTop="268dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/recta1"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/ajouter_tache_img"
        android:layout_width="284dp"
        android:layout_height="100dp"
        android:layout_marginTop="392dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/recta1"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/ajouter_tache_btn"
        android:layout_width="287dp"
        android:layout_height="93dp"
        android:layout_marginTop="396dp"
        android:background="@android:color/transparent"
        android:text="Ajouter une tÃ¢che"
        android:textColor="@color/primary_text"
        android:textSize="18sp"
        app:backgroundTint="#00FFFFFF"
        app:iconTint="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#08FFFFFF"
        app:strokeColor="#08FFFFFF"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/avancement_taches_btn"
        android:layout_width="266dp"
        android:layout_height="88dp"
        android:layout_marginTop="268dp"
        android:background="@android:color/transparent"
        android:text="Avancement taches"
        android:textColor="@color/primary_text"
        android:textSize="18sp"
        app:backgroundTint="#00FFFFFF"
        app:iconTint="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#08FFFFFF"
        app:strokeColor="#08FFFFFF"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/welcome_txt"
        android:layout_width="167dp"
        android:layout_height="37dp"
        android:layout_marginTop="140dp"
        android:text="Welcome !"
        android:textColor="@color/primary_text"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="205dp"
        android:layout_height="58dp"
        android:layout_marginTop="564dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/recta1"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/profil_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="568dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.163"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profil"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/message_img"
        android:layout_width="46dp"
        android:layout_height="47dp"
        android:layout_marginTop="568dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/chat"
        tools:ignore="MissingConstraints"
        android:clickable="true"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>