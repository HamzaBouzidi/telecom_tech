<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/sign_in_background"
    tools:context=".send_or_receive">

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="107dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/telecomlogo" />


    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="284dp"
        android:layout_height="93dp"
        android:layout_marginTop="256dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.732"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_button"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/send_btn"
        android:layout_width="191dp"
        android:layout_height="79dp"
        android:layout_marginTop="180dp"
        android:background="@android:color/transparent"
        android:text="Envoyer message"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:backgroundTint="#00FFFFFF"
        app:iconTint="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.622"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView20"
        app:rippleColor="#08FFFFFF"
        app:strokeColor="#08FFFFFF"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/receive_img"
        android:layout_width="284dp"
        android:layout_height="93dp"
        android:layout_marginTop="388dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.732"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_button"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/receive_btn"
        android:layout_width="191dp"
        android:layout_height="79dp"
        android:layout_marginTop="400dp"
        android:background="@android:color/transparent"
        android:text="Message ReÃ§u"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:backgroundTint="#00FFFFFF"
        app:iconTint="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.622"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#08FFFFFF"
        app:strokeColor="#08FFFFFF"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>